{
  "name": "beatcord",
  "version": "1.0.0",
  "private": true,
  "description": "Real-time collaborative step sequencer â€” the group chat of beats",
  "packageManager": "pnpm@9.15.5",
  "scripts": {
    "dev:server": "pnpm --filter @beatcord/server dev",
    "dev:client": "pnpm --filter @beatcord/client dev",
    "dev": "pnpm --filter @beatcord/shared build && concurrently \"pnpm dev:server\" \"pnpm dev:client\"",
    "build": "pnpm --filter @beatcord/shared build && pnpm --filter @beatcord/client build && pnpm --filter @beatcord/server build",
    "start": "node packages/server/dist/index.js",
    "lint": "eslint packages --ext .ts,.vue",
    "lint:fix": "eslint packages --ext .ts,.vue --fix",
    "format": "prettier --write \"packages/**/*.{ts,vue}\"",
    "verify": "pnpm lint && pnpm typecheck && pnpm test",
    "test": "vitest run",
    "typecheck": "pnpm --filter @beatcord/shared build && pnpm -r typecheck"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "concurrently": "^8.2.0",
    "eslint": "^8.57.0",
    "eslint-plugin-vue": "^9.33.0",
    "prettier": "^3.3.0",
    "typescript": "^5.4.0",
    "vitest": "^1.6.0",
    "vue-eslint-parser": "^9.4.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
